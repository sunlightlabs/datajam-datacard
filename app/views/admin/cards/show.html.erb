<h2><%= @card.title %> data card</h2>

<% if @card.body.present? %>
  <div class="well">
    <%= raw @card.render %>
  </div>
<% else %>
  <ul class="nav nav-pills">
    <li class="active"><%= link_to "Grid", admin_card_path(@card) %></li>
    <li><%= link_to "Recent graphs", admin_card_graphs_path(@card) %></li>
    <li><%= link_to "New graph", new_admin_card_graph_path(@card) %></li>
  </ul>

  <%= render partial: "grid" %>
<% end %>
