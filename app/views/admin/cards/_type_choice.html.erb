<% content_for :head do %>
  <link rel="stylesheet" href="/static/stylesheets/datajam/datacard/style.css">
<% end %>

<% current ||= nil %>

<ul class="nav nav-pills">
    <li><%= link_to "List", admin_cards_path %></li>
    <li class="active"><%= link_to "Create New", new_admin_card_path %></li>
</ul>

<ul class="datacard-type-choice<%= !!current ? ' selected' : '' %>">
  <li class="datacard-from-own-data<%= current == 'own-data' ? ' current' : '' %>">
    <%= link_to new_admin_cards_from_own_datum_path, id: "do_datacard_from_own_data" do %>
      <h3>Enter your data</h3>
      <p>Use your own data with default template.</p>
    <% end %>
  </li>
  <li class="datacard-from-csv-file<%= current == 'csv-file' ? ' current' : '' %>">
    <%= link_to new_admin_cards_from_csv_file_path, id: "do_datacard_from_csv_file" do %>
      <h3>Upload CSV</h3>
      <p>Use an uploaded data file with default template.</p>
    <% end %>
  </li>
  <li class="datacard-from-api-mapping<%= current == 'api-mapping' ? ' current' : '' %>">
    <%= link_to new_admin_cards_from_api_mapping_path, id: "do_datacard_from_api_mapping" do %>
      <h3>From API mapping</h3>
      <p>Use provided mapping to retrieve data.</p>
    <% end %>
  </li>
  <li class="datacard-from-own-html<%= current == 'own-html' ? ' current' : '' %>">
    <%= link_to new_admin_cards_from_html_path, id: "do_datacard_from_own_html" do %>
      <h3>From your own HTML</h3>
      <p>Use your own document describing data.</p>
    <% end %>
  </li>
</ul>
