<h2>Edit Data Card</h2>

<%= simple_form_for [:admin, @card], html: { class: "form-horizontal" } do |f| %>

  <%= f.input :title %>
  <%= f.input :tag_string, input_html: { class: "taggable" } %>
  
  <% if @card.csv %>
  <fieldset>
    <legend>Update CSV</legend>

    <%= f.input :csv_file, as: :file, label: "Upload CSV file", hint: "File extension must be .csv" %>
    <%= f.input :csv, as: :text, label: "Edit existing data", input_html: { class: "datajamTemplate rawData", rows: 10, cols: 100 } %>
    <%= f.input :source, as: :text, label: 'Source Attribution', input_html: { rows: 5, cols: 80 }, hint: "Can use HTML" %>
  </fieldset>
  <% end %>

  <% if !@card.csv && !@card.response && @card.body %>
  <fieldset>
    <legend>Update HTML</legend>

    <%= f.input :body, as: :text, label: "HTML for the data card", input_html: { class: "datajamTemplate", rows: 10, cols: 100 } %>
  </fieldset>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
    <%= button_tag "Preview", value: "1", name: "preview", class: "btn-small", target: "_blank" %>
  </div>
<% end %>
