<% content_for :head do %>
  <link rel="stylesheet" href="/static/stylesheets/datajam/datacard/d3.css">
  <script type="text/javascript" src="/static/javascripts/datajam/datacard/d3.v2.min.js"></script>
  <script type="text/javascript" src="/static/javascripts/datajam/datacard/nv.d3.min.js"></script>
<% end %>

<h2>Graph for &quot;<%= @card.title %>&quot; datacard</h2>

<ul class="nav nav-pills">
  <li><%= link_to "Grid", admin_card_path(@card) %></li>
  <li><%= link_to "Recent graphs", admin_card_graphs_path(@card) %></li>
  <li><%= link_to "New graph", new_admin_card_graph_path(@card) %></li>
</ul>

<div id="chart"><svg style="height: 400px"></svg></div>

<%= javascript_tag do %>
  var chartData = <%= raw @graph.cached_data.to_json %>;
<% end %>
<script type="text/javascript" src="/static/javascripts/datajam/datacard/data_card_graphing.js"></script>
