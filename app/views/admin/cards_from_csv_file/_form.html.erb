<%= simple_form_for [:admin, @card], html: { class: "form-horizontal" } do |f| %>
  <%= hidden_field_tag :type, "from_csv_file" %>

  <%= f.input :title %>
  <%= f.input :tag_string, input_html: { class: "taggable" } %>

  <%= f.input :csv_file, as: :file, label: "Upload CSV File", hint: "File extension must be .csv" %>
  <% if @card.csv && @card.persisted? %>
    <%= f.input :csv, as: :text, label: "Enter your data", input_html: { class: "datajamTemplate rawData", rows: 10, cols: 100 } %>
  <% end %>
  <%= f.input :source, as: :text, label: 'Source Attribution', input_html: { rows: 5, cols: 80 }, hint: "Can use HTML" %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
    <%= button_tag "Preview", value: "1", name: "preview", class: "btn-small", target: "_blank" %>
  </div>
<% end %>
